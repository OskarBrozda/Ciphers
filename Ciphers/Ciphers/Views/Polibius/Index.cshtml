@{
    ViewBag.Title = "Polibius Cipher";
    char[,] matrix = ViewBag.PolibiusMatrix; 
}

<h2>Szyfr Polibiusza</h2>

<form asp-action="Encrypt" asp-controller="Polibius">
    <div class="form-group">
        <label for="text">Tekst:</label>
        <textarea name="text" id="text" class="form-control" rows="3">@ViewBag.Result</textarea>
    </div>
    
    <br/>
    
    <table class="table table-bordered polibiusTable">
        <tr>
            <td><input type="text" name="v00" value="@matrix[0, 0]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v01" value="@matrix[0, 1]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v02" value="@matrix[0, 2]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v03" value="@matrix[0, 3]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v04" value="@matrix[0, 4]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v05" value="@matrix[0, 5]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v06" value="@matrix[0, 6]" maxlength="1" size="1" /></td>
        </tr>
        <tr>
            <td><input type="text" name="v10" value="@matrix[1, 0]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v11" value="@matrix[1, 1]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v12" value="@matrix[1, 2]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v13" value="@matrix[1, 3]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v14" value="@matrix[1, 4]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v15" value="@matrix[1, 5]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v16" value="@matrix[1, 6]" maxlength="1" size="1" /></td>
        </tr>
        <tr>
            <td><input type="text" name="v20" value="@matrix[2, 0]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v21" value="@matrix[2, 1]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v22" value="@matrix[2, 2]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v23" value="@matrix[2, 3]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v24" value="@matrix[2, 4]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v25" value="@matrix[2, 5]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v26" value="@matrix[2, 6]" maxlength="1" size="1" /></td>
        </tr>
        <tr>
            <td><input type="text" name="v30" value="@matrix[3, 0]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v31" value="@matrix[3, 1]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v32" value="@matrix[3, 2]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v33" value="@matrix[3, 3]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v34" value="@matrix[3, 4]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v35" value="@matrix[3, 5]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v36" value="@matrix[3, 6]" maxlength="1" size="1" /></td>
        </tr>
        <tr>
            <td><input type="text" name="v40" value="@matrix[4, 0]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v41" value="@matrix[4, 1]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v42" value="@matrix[4, 2]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v43" value="@matrix[4, 3]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v44" value="@matrix[4, 4]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v45" value="@matrix[4, 5]" maxlength="1" size="1" /></td>
            <td><input type="text" name="v46" value="@matrix[4, 6]" maxlength="1" size="1" /></td>
        </tr>
    </table>
    
    <br/>
    
    <button type="submit" class="btn btn-primary">Szyfruj</button>
    <button type="submit" class="btn btn-primary" asp-action="Decrypt">Deszyfruj</button>
</form>

<br/>

@if (ViewBag.Result != null)
{
    <div class="result">
        <h3>Wynik: </h3><p>@ViewBag.Result</p>
    </div>
}