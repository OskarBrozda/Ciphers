@{
    ViewBag.Title = "Caesar Cipher";
}

<h1 style="text-align: center">Szyfr Cezara</h1>
<br/>
<form asp-action="EncryptDecrypt" asp-controller="Caesar">
    <div class="form-group">
        <textarea name="text" id="text" class="form-control" rows="3" placeholder="wprowadÅº tekst">@ViewBag.Result</textarea>
    </div>
    
    <div class="form-group">
        <label for="number">Klucz:</label>
        <input type="number" class="form-control" name="number" value="@ViewBag.Number" maxlength="2" placeholder="klucz"/>
    </div>
    
    @if (ViewBag.DangerText != null)
    {
        <div class="text-danger">
            <p>@ViewBag.DangerText</p>
        </div>
    }
    
    <br/>
    
    <div style="text-align: center">
        <button type="submit" class="btn btn-primary" name="action" value="encrypt">Szyfruj</button>
        <button type="submit" class="btn btn-primary" name="action" value="decrypt">Deszyfruj</button>
    </div>
</form>

<br/>

@if (ViewBag.Result != null)
{
    <div class="result">
        <h3>Wynik: </h3><p>@ViewBag.Result</p>
    </div>
}